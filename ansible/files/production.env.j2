# Production Environment Configuration
ENVIRONMENT=production
PRODUCTION_IP={{ production_ip }}

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=dbuser
DB_PASSWORD=testpass123

# Service URLs
USER_SERVICE_URL=http://{{ production_ip }}:5001
PRODUCT_SERVICE_URL=http://{{ production_ip }}:5002
ORDER_SERVICE_URL=http://{{ production_ip }}:5003
FRONTEND_URL=http://{{ production_ip }}:8080

# Docker Registry
DOCKER_REGISTRY=0xsaju
DOCKER_TAG=production

# Application Configuration
SECRET_KEY={{ lookup('password', '/dev/null length=64 chars=ascii_letters,digits') }}
DEBUG=False
FLASK_ENV=production
LOG_LEVEL=INFO

# Security Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring Configuration
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=300
LOG_RETENTION_DAYS=30

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=7 